<?xml version="1.0" encoding="utf-8" ?>
<Patch>

	<!-- Production -->
	<Operation Class="PatchOperationSequence">
		<success>Always</success>
		<operations>
			<li Class="ExpandedWoodworking.PatchOperationModCompat">
				<modName>VGP Garden Gourmet</modName>
			</li>
			<li Class="PatchOperationReplace">
				<xpath>/Defs/ThingDef[defName = "Oven"]/comps/li[@Class="CompProperties_Refuelable"]/fuelFilter/thingDefs/li[.="WoodLog"]	|
						/Defs/ThingDef[defName = "HandCanningstove"]/comps/li[@Class="CompProperties_Refuelable"]/fuelFilter/thingDefs/li[.="WoodLog"]	|
						/Defs/ThingDef[defName = "FueledCandyTable"]/comps/li[@Class="CompProperties_Refuelable"]/fuelFilter/thingDefs/li[.="WoodLog"]</xpath>
				<value>
					<li>WoodLog_Apple</li>
					<li>WoodLog_Birch</li>
					<li>WoodLog_Cecropia</li>
					<li>WoodLog_Cherry</li>
					<li>WoodLog_Coconut</li>
					<li>WoodLog_Cypress</li>
					<li>WoodLog_DatePalm</li>
					<li>WoodLog_Drago</li>
					<li>WoodLog_Fig</li>
					<li>WoodLog_Maple</li>
					<li>WoodLog_Oak</li>
					<li>WoodLog_Orange</li>
					<li>WoodLog_Peach</li>
					<li>WoodLog_Pine</li>
					<li>WoodLog_Palm</li>
					<li>WoodLog_Poplar</li>
					<li>WoodLog_Saguaro</li>
					<li>WoodLog_Teak</li>
					<li>WoodLog_Willow</li>
				</value>
			</li>
		</operations>
	</Operation>
	
	<Operation Class="PatchOperationSequence">
		<success>Always</success>
		<operations>
			<li Class="ExpandedWoodworking.PatchOperationModCompat">
				<modList>
					<li>VGP Garden Gourmet</li>
					<li>VGP Xtra Trees and Flowers</li>
				</modList>
			</li>
			<li Class="PatchOperationAdd">
				<xpath>/Defs/ThingDef[defName = "Oven"]/comps/li[@Class="CompProperties_Refuelable"]/fuelFilter/thingDefs	|
						/Defs/ThingDef[defName = "HandCanningstove"]/comps/li[@Class="CompProperties_Refuelable"]/fuelFilter/thingDefs	|
						/Defs/ThingDef[defName = "FueledCandyTable"]/comps/li[@Class="CompProperties_Refuelable"]/fuelFilter/thingDefs</xpath>
				<value>
					<li>WoodLog_Acacia</li>
					<li>WoodLog_Camellia</li>
					<li>WoodLog_CherryBlossom</li>
					<li>WoodLog_JapaneseMaple</li>
					<li>WoodLog_RedMaple</li>
				</value>
			</li>
		</operations>
	</Operation>
	
</Patch>